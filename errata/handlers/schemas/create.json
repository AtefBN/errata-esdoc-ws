{
    "$schema": "http://json-schema.org/schema#",
    "additionalProperties": false,
    "properties": {
        "description": {
            "minLength": 1,
            "type": "string"
        },
        "materials": {
            "items": {
                "pattern": "\\.(jpg|gif|png|tiff)$",
                "type": "string"
            },
            "type": "array",
            "uniqueItems": true
        },
        "models": {
            "items": {
                "minLength": 1,
                "type": "string"
            },
            "type": "array",
            "uniqueItems": true
        },
        "project": {
            "minLength": 1,
            "type": "string"
        },
        "severity": {
            "enum": [
                "Low",
                "Medium",
                "High",
                "Critical"
            ],
            "type": "string"
        },
        "title": {
            "minLength": 1,
            "type": "string"
        },
        "url": {
            "minLength": 1,
            "type": "string"
        },
        "datasets":{ "items": {
            "minLength": 1,
            "type": "string"
            },
            "type": "array",
            "uniqueItems": true
        }
    },
    "required": [
        "title",
        "description",
        "severity",
        "project",
        "models",
        "datasets"
    ],
    "title": "ESGF issue JSON schema",
    "type": "object"
}