{
"$schema": "http://json-schema.org/schema#",
"title": "ESGF issue JSON schema",
"type": "object",
"properties": {
  "id": {
    "type": "string",
    "pattern": "^[0-9a-f]{8}(-[0-9a-f]{4}){3}-[0-9a-f]{12}$"
  },
  "title": {
    "type": "string",
    "minLength": 1
  },
  "description": {
    "type": "string",
    "minLength": 1
  },
  "severity": {
    "type": "string",
    "enum": [
      "low",
      "medium",
      "high",
      "critical"
    ]
  },
  "institute": {
    "type": "string",
    "minLength": 1
  },
  "project": {
    "type": "string",
    "minLength": 1,
    "enum": [
      "CMIP5",
      "CMIP6"
    ]
  },
  "models": {
    "type": "array",
    "uniqueItems": true,
    "items": {
      "type": "string",
      "minLength": 1
    }
  },
  "url": {
    "type": "string",
    "minLength": 1
  },
  "materials": {
    "type": "array",
    "uniqueItems": true,
    "items": {
      "type": "string",
      "pattern": "\\.(jpg|gif|png|tiff)$"
    }
  },
  "status": {
    "type": "string",
    "enum": [
      "new",
      "on hold",
      "wontfix",
      "resolved"
    ]
  },
  "created_at": {
    "type": "string",
    "format": "date-time"
  },
  "last_updated_at": {
    "type": "string",
    "format": "date-time"
  },
  "closed_at": {
    "type": "string",
    "format": "date-time"
  }
},
"additionalProperties": false,
"required": [
  "id",
  "title",
  "description",
  "severity",
  "project",
  "models",
  "status",
  "created_at",
  "last_updated_at"
]
}
