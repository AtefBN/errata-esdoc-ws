{
"$schema": "http://json-schema.org/schema#",
"title": "ESGF issue JSON schema",
"type": "object",
"properties": {
  "title": {
    "type": "string",
    "minLength": 1
  },
  "description": {
    "type": "string",
    "minLength": 1
  },
  "severity": {
    "type": "string",
    "enum": [
      "low",
      "medium",
      "high",
      "critical"
    ]
  },
  "project": {
    "type": "string",
    "minLength": 1,
    "enum": [
      "CMIP5",
      "CMIP6"
    ]
  },
  "institute": {
    "type": "string",
    "minLength": 1
  },
  "models": {
    "type": "array",
    "uniqueItems": true,
    "items": {
      "type": "string",
      "minLength": 1
    }
  },
  "url": {
    "type": "string",
    "minLength": 0
  },
  "materials": {
    "type": "array",
    "uniqueItems": true,
    "items": {
      "type": "string",
      "pattern": "\\.(jpg|gif|png|tiff)$"
    }
  },
  "workflow": {
    "type": "string",
    "enum": [
      "new",
      "on hold",
      "wontfix",
      "resolved"
    ]
  },
  "date_created": {
    "type": "string",
    "format": "date-time"
  },
  "date_updated": {
    "type": "string",
    "format": "date-time"
  }
},
"additionalProperties": true,
"required": [
  "uid",
  "title",
  "description",
  "severity",
  "project",
  "models",
  "workflow",
  "state",
  "date_closed",
  "date_updated",
  "datasets"
]
}
